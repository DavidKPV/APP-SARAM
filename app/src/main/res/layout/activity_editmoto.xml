<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saram.app.editmotoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/contorno"
                app:srcCompat="@drawable/saram" />

            <LinearLayout
                android:id="@+id/llModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvModelo"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Modelo"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/Modelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
            android:id="@+id/llMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMarca"
                android:layout_width="110dp"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:textColor="@color/negro"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                android:layout_marginRight="30dp">

                <EditText
                    android:id="@+id/Marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/llCilindraje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCilindraje"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Cilindraje"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCilindraje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/etCilindraje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPlaca"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Placa"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="5"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/Placa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSARAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSARAM"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="SARAM"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSARAM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/etSARAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegistro"
                android:text="Actualizar"
                android:textColor="@color/blanco"
                android:background="@drawable/boton"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>