<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saram.app.activitys.edit_contactosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/contorno"
                app:srcCompat="@drawable/saram" />

            <LinearLayout
                android:id="@+id/llNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    android:layout_marginRight="50dp">

                    <EditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvApellidos"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    android:layout_marginRight="50dp">

                    <EditText
                        android:id="@+id/etApellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNumero"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="13"
                    android:layout_marginRight="50dp">

                    <EditText
                        android:id="@+id/etNumero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    android:layout_marginRight="50dp">

                    <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnActualiza"
                android:text="Actualizar"
                android:textColor="@color/blanco"
                android:background="@drawable/boton"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>