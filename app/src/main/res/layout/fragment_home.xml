<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home"
        android:orientation="vertical">

        <!-- SE AÑADE UN SCROLL PARA QUE SE PUEDA APLICAR AL ACTIVITY
         DENTRO DEL SCROLL ES OBLIGATORIO COLOCAR EL LINEAR LAYOUT
         ESTO SE REALIZA PARA QUE SE PUEDAN VER TODOS LOS ELEMENTOS
         EN CASO DE QUE SE CAMBIE LA ORIENTACIÓN DE LA PANTALLA Y NO
         ENTREN TODOS LOS ELEMENTOS-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="BIENVENIDO" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:textSize="25dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:text="ESTADO DE MOTOCICLETA" />

                <TextView
                    android:id="@+id/tvModeloMoto"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="ESTADO" />

                <ImageView
                    android:id="@+id/imgEstado"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:text="EXCELENTE" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAlarma"
                    android:text="Activar Alarma Manual"
                    android:textColor="@color/blanco"
                    android:background="@drawable/boton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="400dp"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>