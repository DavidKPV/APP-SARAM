<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saram.app.activitys.addmotoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="200dp"
                app:cardCornerRadius="200dp">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/saram" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvModelo"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Modelo"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    android:layout_marginRight="50dp">

                    <EditText
                        android:id="@+id/etModelo"
                        android:hint="ejem: GSXR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMarca"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    android:layout_marginRight="80dp">

                    <EditText
                        android:id="@+id/etMarca"
                        android:hint="ejem: Susuki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCilindraje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCilindraje"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Cilindraje"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCilindraje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    android:layout_marginRight="80dp">

                    <EditText
                        android:id="@+id/etCilindraje"
                        android:hint="ejem: 150"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPlaca"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="Placa"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="5"
                    android:layout_marginRight="80dp">

                    <EditText
                        android:id="@+id/etPlaca"
                        android:hint="XXXXX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSARAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSARAM"
                    android:layout_width="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:text="SARAM"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSARAM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    android:layout_marginRight="80dp">

                    <EditText
                        android:id="@+id/etSARAM"
                        android:hint="Número SARAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegistro"
                android:text="Añadir"
                android:textColor="@color/blanco"
                android:background="@drawable/boton"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>