<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saram.app">
    <!-- PEIMITIR EL USO DE EL GPS DEL DISPOSITIVO -->
    <uses-feature android:name="android.hardware.location.gps" /> <!-- PERMISO PARA UTILIZAR LA LOCALIZACIÓN DEL CELULAR -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- PERMISO PARA PERMITIR EL USO DE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- SE LE DAN PERMISOS DE VIBRACIÓN DE HARDWARE DEL DISPOSITIVO -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- PERMISO PARA PODER OBTENER LOS CONTACTOS DEL DISPOSITIVO (CONTENT PROVIDER) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- PERMISO PARA EL ENVÍO DE MENSAJES DE TEXTO -->
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- DAMOS PERMISOS A LA CÁMARA -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- PERMISO PARA LA UTILIZACIÓN DE LA CÁMARA PARA EL LECTOR QR -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".models.Retardo_splash"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".controllers.activitys.ChatBotActivity"
            android:label="Chat SARAM"/>
        <activity
            android:name=".controllers.activitys.SplashActivity"
            android:theme="@style/splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activitys.Edit_contactosActivity"
            android:label="Información contacto" />
        <activity
            android:name=".controllers.activitys.Contactos_saramActivity"
            android:label="Tus contactos SARAM" />
        <activity
            android:name=".controllers.activitys.UserinfoActivity"
            android:label="Mi información" />
        <activity
            android:name=".controllers.activitys.AddmotoActivity"
            android:label="Nueva motocicleta" />
        <activity
            android:name=".controllers.activitys.EditmotoActivity"
            android:label="Información de motocicleta" />
        <activity
            android:name=".controllers.activitys.InfomotoActivity"
            android:label="Información de motocicletas" /> <!-- META DATA UTILIZADO PARA ACTIVAR LA API DE GOOGLE -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- META DATA PARA LA CONEXIÓN WEB CON VOLLEY -->
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".controllers.fragments.MapsActivity"
            android:label="Mapa SARAM" />
        <activity
            android:name=".controllers.activitys.InicioActivity"
            android:label="@string/title_activity_inicio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.activitys.RegistroActivity"
            android:label="Nuevo Usuario - Registro" />
        <activity
            android:name=".controllers.activitys.RecuperarContra"
            android:label="Recuperar mi Contraseña" />
        <activity
            android:name=".controllers.activitys.MainActivity"
            android:configChanges="uiMode"
            android:windowSoftInputMode="stateVisible|adjustPan"></activity> <!-- SE IMPLEMENTA EL RECEIVER PARA LA ALARMA -->
        <receiver android:name=".models.Alarma" />
    </application>

</manifest>